// zed settings
//
// for information on how to configure zed, see the zed
// documentation: https://zed.dev/docs/configuring-zed
//
// to see all of zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_edit_predictions": false,
  "bottom_dock_layout": "contained",
  "preview_tabs": {
    "enabled": true,
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true,
  },
  "tabs": {
    "show_close_button": "hidden",
  },
  "title_bar": {
    "show_user_picture": true,
    "show_sign_in": false,
  },
  "debugger": {
    "button": true,
  },
  "search": {
    "button": false,
  },
  "diagnostics": {
    "button": true,
  },
  "terminal": {
    "button": false,
  },
  "status_bar": {
    "cursor_position_button": true,
  },
  "toolbar": {
    "code_actions": true,
    "agent_review": true,
    "quick_actions": false,
  },
  "gutter": {
    "runnables": true,
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gemini-3-pro-preview",
    },
    "enable_feedback": false,
    "button": false,
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o-mini",
    },
    "model_parameters": [],
  },
  "notification_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "git_panel": {
    "dock": "right",
    "button": false,
  },
  "outline_panel": {
    "folder_icons": false,
    "button": false,
  },
  "project_panel": {
    "button": false,
    "hide_root": true,
    "show_diagnostics": "off",
    "starts_open": false,
    "indent_size": 10.0,
    "git_status": true,
    "folder_icons": false,
    "file_icons": false,
    "entry_spacing": "standard",
    "hide_gitignore": true,
    "default_width": 240.0,
    "dock": "right",
  },
  "git": {
    "inline_blame": {
      "delay_ms": 2,
    },
  },
  "buffer_font_family": "jetbrainsmono nerd font mono",
  "icon_theme": {
    "mode": "dark",
    "light": "zed (default)",
    "dark": "zed (default)",
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": false,
    "use_smartcase_find": true,
    "default_mode": "normal",
  },
  "use_auto_surround": false,
  "use_autoclose": false,
  "preferred_line_length": 100,
  "base_keymap": "VSCode",
  "inline_code_actions": false,
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "Rosé Pine",
    "dark": "Rosé Pine",
  },
  "lsp": {
    "metals": {},
    "kotlin-lsp": {
      "binary": {
        "path": "kotlin-lsp",
        "arguments": ["--stdio"],
      },
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "exclude": ["*"],
        },
      },
    },
  },
  "languages": {
    "Kotlin": {
      "language_servers": ["kotlin-lsp", "!kotlin-language-server"],
      "format_on_save": "off",
      "formatter": "auto",
      "code_actions_on_format": { "source.organizeImports": true },
    },
    "Scala": {
      "format_on_save": "off",
      "formatter": "auto",
      "code_actions_on_format": { "source.organizeImports": true },
    },
    "Python": {
      "format_on_save": "off",
      "formatter": "ruff",
      "code_actions_on_format": { "source.organizeImports": true },
      "language_servers": ["ty", "!basedpyright"],
    },
  },
}
